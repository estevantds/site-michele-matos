@model MiMatos.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <input type="hidden" asp-for="CadastroSite" />
            <input type="hidden" asp-for="CriadoEm" />
            <div class="form-group form-check ">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visualizado" /> @Html.DisplayNameFor(model => model.Visualizado)
                </label>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group form-check ">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsWhatsApp" /> @Html.DisplayNameFor(model => model.IsWhatsApp)
                </label>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="OutroTelefone" class="control-label"></label>
                <input asp-for="OutroTelefone" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Nascimento" class="control-label"></label>
                <input type="date" asp-for="Nascimento" class="form-control" />
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Mensagem" class="control-label"></label>
                <textarea asp-for="Mensagem" class="form-control" style="height: 250px"></textarea>
                <span asp-validation-for="Mensagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
