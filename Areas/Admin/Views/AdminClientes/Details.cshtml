@model MiMatos.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Detalhes</h1>

<div class="card shadow-lg col-md-12">
            <div class="card-body">
                <h3 class="card-title">@Model.Nome</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Telefone:</b> @Model.Celular 
                        @if (Model.IsWhatsApp)
                        {
                            <i class="bi bi-whatsapp"></i>
                        }
                    </li>
                    <li class="list-group-item"><b>Outro Telefone</b> @Model.OutroTelefone</li>
                    <li class="list-group-item"><b>e-mail:</b> @Model.Email</li>
                    <li class="list-group-item"><b>Nascimento:</b> @Model.Nascimento</li>
                    <li class="list-group-item"><b>Data de Cadastro:</b> @Model.CriadoEm</li>
                    <li class="list-group-item"><b>Última Edição:</b> @Model.AtualizadoEm</li>
                    <li class="list-group-item">
                        @if (Model.CadastroSite)
                        {
                            <b>Cadastrado pelo site</b>
                        }
                        else
                        {
                            <b>Cadastrado pelo sistema</b>
                        }
                    </li>
                </ul>
                <hr />
                <div class="d-flex">
                    <div class="col-md-12 text-end">
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.ClienteId">Editar</a>
                        <a class="btn btn-outline-info" asp-controller="Property" asp-action="Index" asp-route-id="@Model.ClienteId">Ver Imóveis</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.ClienteId">Apagar</a>
                    </div>
                </div>
                <div>
                    <a class="btn btn-outline-dark" asp-action="Index" >Voltar</a>
                </div>
            </div>
        </div>