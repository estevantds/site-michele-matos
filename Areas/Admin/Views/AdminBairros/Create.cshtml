@model MiMatos.Models.Bairro

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Bairro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeCidade" class="control-label"></label>
                <select asp-for="NomeCidade" asp-items="Model.Cidades" class="form-select"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
