@model MiMatos.Models.Bairro

@{
    ViewData["Title"] = "Create";
}

<h1>Editar</h1>

<h4>Bairro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BairroId" />
            <input type="hidden" asp-for="NomeCidade" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeCidade" class="control-label"></label>
                <input asp-for="NomeCidade" list="Cidades" id="NomeCidade" placeholder="Digite a Cidade" class="form-control" />
                <datalist id="Cidades">
                    @foreach (var item in Model.Cidades)
                    {
                        <option value="@item.Nome" />
                    }
                </datalist>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
