@model IEnumerable<MiMatos.Models.Cidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Cidades</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">+ Adicionar Nova</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Sigla)
                </td>
                <td>
                    <div class="row">
                        <a class="btn btn-outline-dark col" asp-action="Edit" asp-route-id="@item.CidadeId">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a class="btn btn-dark col" asp-controller="AdminBairros" asp-action="ListByCidade" asp-route-id="@item.CidadeId">
                            <i class="bi bi-eye"></i> Ver Bairros
                        </a>
                        <a class="btn btn-outline-danger col" asp-action="Delete" asp-route-id="@item.CidadeId">
                            <i class="bi bi-trash"></i> Apagar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
