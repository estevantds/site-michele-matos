@model MiMatos.Models.Cidade

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja Deletar essa Cidade?</h3>
<h5>ATENÇÃO: Deletar uma Cidade, automaticamente Deleta seus Bairros.</h5>
<div>
    <h4>Cidade</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado.Sigla)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CidadeId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Cancelar</a>
    </form>
</div>
