@model MiMatos.Models.Tipo

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que quer Deletar esse tipo?</h3>
<div>
    <h4>Tipo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prefixo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prefixo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TipoId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-action="Index">Cancelar</a>
    </form>
</div>
