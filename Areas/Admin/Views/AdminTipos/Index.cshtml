@model IEnumerable<MiMatos.Models.Tipo>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Tipos</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prefixo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prefixo)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.TipoId">Editar</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.TipoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
